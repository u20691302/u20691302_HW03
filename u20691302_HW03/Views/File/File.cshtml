@using u20691302_HW03.Models
@model List<FileModel>

@{
    ViewBag.Title = "File";
}

<head>
    <style type="text/css">
        .auto-style {
            color: #FFFFFF;
        }

        .t {
            text-align: center;
            vertical-align: middle;
        }
    </style>
</head>
<div class="well-sm">
    <h2>File Download / Delete</h2>
</div>

<!--Table-->
<div style="height: 400px; overflow: auto;">
    <div class="well-sm">
        <table class="table table-condensed table-hover">
            <thead style="position: sticky;top: 0">
                <tr bgcolor="#222222" class="auto-style">
                    <th class="col-lg-8">File Name</th>
                    <th class="t, col-lg-2">DOWNLOAD</th>
                    <th class="t, col-lg-2">DELETE</th>
                </tr>
            </thead>

            @foreach (FileModel file in Model)
            {
                <tr>
                    <td>@file.Filename</td>
                    <td>
                        <button type="button" class="btn btn-success">
                            @Html.ActionLink("Download", "DownloadFile",
                             new { fileName = file.Filename })
                        </button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger">
                            @Html.ActionLink("DELETE", "DeleteFile",
                           new {  fileName = file.Filename },
                           new { onclick = "return confirm('Are you sure you wish to delete file?');" })
                        </button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
