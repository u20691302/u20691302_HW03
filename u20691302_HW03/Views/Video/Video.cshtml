@using u20691302_HW03.Models
@model List<FileModel>

@{
    ViewBag.Title = "Videos";
}


@foreach (FileModel file in Model)
{
    <div class="container">
        <div class="row">

            <div class="col-md-3">

                <div class="card">

                    <div class="card-body">
                        <div class="gallery">
                            <a href="~/Resources/Videos/@file.Filename"><video width="320" height="240" controls>
                                <source src="~/Resources/Videos/@file.Filename" type="video/mp4">
                                <source src="~/Resources/Videos/@file.Filename" type="video/ogg">
                                Your browser does not support the video tag.
                                </video></a>
                        </div>
                        <h4 class="card-title">@file.Filename</h4>
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-success">
                            @Html.ActionLink("Download", "DownloadFile",
                            new { fileName = file.Filename })
                        </button><br>
                        <br>
                        <button type="button" class="btn btn-danger">
                            @Html.ActionLink("DELETE", "DeleteFile",
                            new { fileName = file.Filename },
                            new { onclick = "return confirm('Are you sure you wish to delete this image?');" })
                        </button>
                    </div>

                </div>
                <br>
                <br>

            </div>

        </div>
    </div>
}